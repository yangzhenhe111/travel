<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Light.NoTitleBar"
    tools:context=".ui.activity.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="286dp"
       android:layout_gravity="center"
        android:background="@drawable/login1">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:showDividers="end">

        <TextView
            android:layout_width="74.2dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="登录"
            android:textColor="#203152"
            android:textSize="36dp"></TextView>

        <EditText
            android:id="@+id/log_name"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/textveiw_border"
            android:drawableLeft="@drawable/yonghu"
            android:drawablePadding="10dp"
            android:hint="请输入账号名称"
            android:textColor="#182C57"
            android:textColorHint="#182C57"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/shap"
            android:theme="@style/loginEditText"></EditText>

        <EditText
            android:id="@+id/log_pwd"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textveiw_border"
            android:drawableLeft="@drawable/mima"
            android:drawablePadding="10dp"
            android:hint="请输入账号密码"
            android:inputType="textPassword"
            android:textColor="#182C57"
            android:textColorHint="#182C57"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/shap"
            android:theme="@style/loginEditText"></EditText>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#182C57"
            android:onClick="loginSys"
            android:text="立即登录"
            android:textColor="#FAFAFA"
            android:textColorHint="#dbdbdb"
            android:textSize="14dp"></Button>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="登录用户同意隐私协议"
            android:textColor="#182C57"
            android:textColorHint="#182C57"
            android:textSize="18sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/regTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="#203152"
            android:textSize="18sp"
            >
        </TextView>
    </LinearLayout>

</LinearLayout>