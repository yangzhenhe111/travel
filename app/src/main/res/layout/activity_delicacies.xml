<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.DelicaciesActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/frag_bg"
            android:id="@+id/detail_top_bar">
            <ImageButton
                android:id="@+id/delicacies_top_back"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:src="@drawable/fanhui"

                android:background="@null"
                android:tint="@color/blue_edit"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/top_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="美食"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:id="@+id/shanchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/delicacies_shanchu_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/shanchu"
                    android:tint="@color/blue_edit" />
                <TextView
                    android:id="@+id/delicacies_shanchu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <ImageButton
                    android:id="@+id/delicacies_baocun_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baocun"
                    android:background="@null"
                    android:tint="@color/blue_edit" />
                <TextView
                    android:id="@+id/delicacies_baocun_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"></TextView>
            </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"

                    android:text="餐馆名称"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>
                <EditText
                    android:id="@+id/delicacies_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#182C57"
                    android:textColorHint="#182C57"
                    android:hint="将nice的餐馆推荐给大家吧"
                    android:textCursorDrawable="@drawable/shap"
                    android:background="@drawable/edittext_back"></EditText>


            </LinearLayout>

            <View style="@style/line_2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:text="推荐菜品"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold">
                </TextView>
                <EditText
                    android:id="@+id/delicacies_dishes"
                    android:inputType="textMultiLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#182C57"
                    android:textColorHint="#182C57"
                    android:background="@drawable/edittext_back"
                    android:theme="@style/loginEditText"
                    android:drawablePadding="10dp"
                    android:textCursorDrawable="@drawable/shap"
                    android:hint="向大家推荐美味的菜品吧！"></EditText>

            </LinearLayout>

            <View style="@style/line_2"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>