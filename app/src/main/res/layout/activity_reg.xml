<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:theme="@android:style/Theme.Light.NoTitleBar">

    <LinearLayout
        android:layout_width="292dp"
        android:layout_height="286dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/login1">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="end"
        android:scrollbars="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="74.2dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="注册"
            android:textColor="#203152"
            android:textSize="36dp"
            ></TextView>
        <EditText
            android:id="@+id/username"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textveiw_border"
            android:textSize="14sp"
            android:drawableLeft="@drawable/yonghu"
            android:theme="@style/loginEditText"
            android:drawablePadding="10dp"
            android:textColor="#182C57"
            android:textColorHint="#182C57"
            android:hint="请输入账号名称">
        </EditText>
        <EditText
            android:id="@+id/pwd"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:textColor="#182C57"
            android:textColorHint="#182C57"
            android:background="@drawable/textveiw_border"
            android:drawableLeft="@drawable/mima"
            android:theme="@style/loginEditText"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:hint="请输入账号密码">
        </EditText>
        <EditText
            android:id="@+id/email"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textColor="#182C57"
            android:textColorHint="#182C57"
            android:textSize="14sp"
            android:background="@drawable/textveiw_border"
            android:drawableLeft="@drawable/youxiang"
            android:theme="@style/loginEditText"
            android:drawablePadding="10dp"
            android:hint="请输入邮箱名称">
        </EditText>
        <EditText
            android:id="@+id/tel"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:textColor="#182C57"
            android:textColorHint="#182C57"
            android:textSize="14sp"
            android:background="@drawable/textveiw_border"
            android:drawableLeft="@drawable/shouji"
            android:theme="@style/loginEditText"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:hint="请输入电话号码">
        </EditText>




    </LinearLayout>

        <Button
            android:id="@+id/regBtn"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:textColor="#FAFAFA"
            android:textSize="14dp"
            android:text="立刻注册"
            android:layout_marginRight="20dp"
            android:background="#182C57"
            android:onClick="saveUser"
            >
        </Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goLoginTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="已有账号,马上登录"
            android:textColor="#203152"
            android:textSize="14dp"></TextView>
    </LinearLayout>

</LinearLayout>
</ScrollView>