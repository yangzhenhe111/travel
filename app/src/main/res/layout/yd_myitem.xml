<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0b1552">

    <RelativeLayout
        android:id="@+id/myyyitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/sp_13">

        <TextView
            android:id="@+id/myyd_spotsnameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dp_13"
            android:text="景区名:九寨沟"
            android:textColor="@color/frag_bg"
            android:textSize="@dimen/sp_13" />



        <TextView
            android:id="@+id/myyd_orderNumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_below="@+id/myyd_spotsnameTv"
            android:text="单号:2020103012403485594722663"
            android:textColor="@color/frag_bg"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/myyd_totalpriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_below="@+id/myyd_orderNumTv"
            android:text="合计:2000"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/myyd_orderStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_below="@+id/myyd_totalpriceTv"
            android:text="订单状态:0-未付款"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="立即付款"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/myyd_totalpriceTv"
            android:layout_toRightOf="@+id/myyd_orderStatusTv"
            android:id="@+id/yd_payBtn"
            android:textColor="@color/white"
            android:background="@color/red">

        </Button>


    </RelativeLayout>
</LinearLayout>