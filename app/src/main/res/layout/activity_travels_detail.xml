<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fadingEdge="vertical"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".ui.activity.TravelsDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail_top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#e5ffffff">

        <ImageButton
            android:id="@+id/detail_top_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/fanhui"
            android:tint="@color/blue_edit"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景区详情"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_top_bar"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/detail_page_above_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/spotsdetail_fmUrlTv"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/detail_top_bar"></ImageView>

                    <RelativeLayout
                        android:id="@+id/gerenxinxi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/faburenxingming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:text="曹旭帆"></TextView>

                        <TextView
                            android:id="@+id/fabushijian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="发布于 05.01 16:00"
                            android:textSize="12dp"></TextView>
                    </RelativeLayout>

                    <View style="@style/line_3" />

                    <RelativeLayout
                        android:id="@+id/jingdianxinxi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/spotsdetail_nameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:text="景区名:xxxxx"
                            android:textSize="18dp">

                        </TextView>

                        <TextView
                            android:id="@+id/spotsdetail_addressTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spotsdetail_nameTv"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="地址:都江堰街道111号"
                            android:textSize="14dp">

                        </TextView>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/spotsdetail_spotsjbxx_label"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:text="当地概况"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/spotsdetail_opentimeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:text="开放时间:9:00开放"
                            android:textSize="14dp"></TextView>

                        <TextView
                            android:id="@+id/spotsdetail_briefDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:text="简介"
                            android:textSize="14dp"></TextView>

                    </LinearLayout>

                    <View style="@style/line_3" />

                    <TextView
                        android:id="@+id/spotsdetail_spotsDescWv_label"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="交通"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/spotsdetail_jiaotong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:text="交通详情"
                            android:textSize="14dp"></TextView>
                    </LinearLayout>

                    <View style="@style/line_3" />

                    <TextView
                        android:id="@+id/spotsdetail_purchaseinfoWv_label"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="住宿"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/spotsdetail_zhusu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:text="住宿详情"
                            android:textSize="14dp"></TextView>
                    </LinearLayout>

                    <View style="@style/line_3" />


                    <TextView
                        android:id="@+id/spotsdetail_featuresWv_label"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="美食"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="58dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/spotsdetail_meishi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:text="美食详情"
                            android:textSize="14dp"></TextView>
                    </LinearLayout>

                    <View style="@style/line_3" />
                </LinearLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_comment"
                    android:layout_marginTop="10dp" />
<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                    android:orientation="vertical">-->
                    <!--                    <cn.Travels_App.utils.CommentExpandableListView-->
                    <!--                        android:id="@+id/detail_page_comment_container"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:divider="@null"-->
                    <!--                        android:layout_marginBottom="64dp"-->
                    <!--                        android:listSelector="@android:color/transparent"-->
                    <!--                        android:scrollbars="none">-->
                    <!--                    </cn.Travels_App.utils.CommentExpandableListView>-->

<!--                </LinearLayout>-->
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffffff"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_page_do_comment"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="22dp"
            android:layout_weight="1"
            android:background="@drawable/comment_bt_selector"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:text="说点什么吧..."
            android:textColor="#B6B6B6"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/collection"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_collect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="32"
            android:textColor="#9A9A9A"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_work_like" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:text="66"
            android:textColor="#9A9A9A"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>