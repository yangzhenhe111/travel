<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">	<!-- focused -->
    <item android:drawable="@color/white" android:state_focused="true" />	<!-- focused and pressed -->
    <item android:drawable="@color/white" android:state_focused="true"		android:state_pressed="true" />	<!-- pressed -->
    <item android:drawable="@color/blue_8fd7fa" android:state_pressed="true" />	<!-- default -->	<!-- <item android:drawable="@color/white" /> -->
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#EDEDED"
                android:endColor="#EDEDED"
                android:angle="-90" />
            <corners
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                />
        </shape>
    </item>
</selector>